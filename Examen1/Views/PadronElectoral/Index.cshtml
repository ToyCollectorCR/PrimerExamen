@model List<Entity.DBO.PadronElectoralEntity>




@if (ViewData.ContainsKey("msg"))
{
    <script>
     alert("@ViewData["msg"]");
    </script>

}


<div class="container-fluid">
    <h1>Padron Electoral</h1>

    <div class="row">

        <div class="col-3">
            <button type="button" class="btn btn-outline-primary" onclick="ClickNew()"><i class='bx bx-add-to-queue'></i></button>
        </div>
    </div>


    <div class="row">
        <div class="col-6">
            <div>
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>Id Civil</th>
                            <th>Cedula</th>
                            <th>Nombre</th>
                            <th>Apellido1</th>
                            <th>Apellido2</th>
                            <th>Edad</th>
                            <th>Estado</th>
                            <th>Accion</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.IdCivil</td>
                            <td>@item.Cedula</td>
                            <td>@item.Nombre</td>
                            <td>@item.Apellido1</td>
                            <td>@item.Apellido2</td>
                            <td>@item.Edad</td>
                            <td>@(item.Estado ? "Activo" : "Inactivo")</td>

                            <td>
                                <button type="button" class="btn btn-outline-primary" onclick="ClickUpdate(@item.IdCivil)"><i class='bx bx-edit-alt'></i></button>
                                <button type="button" class="btn btn-outline-primary" onclick="ClickDelete(@item.IdCivil)"><i class='bx bx-trash'></i></button>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>

</div>


@section scripts{

    <script>

        var ClickNew = function () {
            window.location.href = "PadronElectoral/Edit";
        }

        var ClickUpdate = function (id) {
            window.location.href = "PadronElectoral/Edit/" + id;
        }

        var ClickDelete = function (id) {

            var result = confirm("Esta seguro de que desea eliminar el registro?");
            if (result) window.location.href = "PadronElectoral/Delete/" + id;
        }




    </script>




}

