@model List<Entity.DBO.TipoTramiteEntity>




@if (ViewData.ContainsKey("msg"))
{
    <script>
     alert("@ViewData["msg"]");
    </script>

}


<div class="container-fluid">
    <h1>Tipo De Tramites</h1>

    <div class="row">

        <div class="col-3">
            <button type="button" class="btn btn-outline-primary" onclick="ClickNew()"><i class='bx bx-add-to-queue'></i></button>
        </div>
    </div>


    <div class="row">
        <div class="col-6">
            <div>
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>Id Tipo Tramite</th>
                            <th>Descripcion</th>
                            <th>Estado</th>
                            <th>Acción</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdTipoTramite</td>
                                <td>@item.Descripcion</td>
                                <td>@(item.Estado ? "Activo" : "Inactivo")</td>
                                <td>
                                    <button type="button" class="btn btn-outline-primary" onclick="ClickUpdate(@item.IdTipoTramite)"><i class='bx bx-edit-alt'></i></button>
                                    <button type="button" class="btn btn-outline-primary" onclick="ClickDelete(@item.IdTipoTramite)"><i class='bx bx-trash'></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>

</div>


@section scripts{

    <script>

        var ClickNew = function () {
            window.location.href = "TipoTramite/Edit";
        }

        var ClickUpdate = function (id) {
            window.location.href = "TipoTramite/Edit/" + id;
        }

        var ClickDelete = function (id) {

            var result = confirm("Esta seguro de que desea eliminar el registro?");
            if (result) window.location.href = "TipoTramite/Delete/" + id;
        }




    </script>




}

